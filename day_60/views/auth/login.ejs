<div class="w-50 mx-auto mt-5 shadow p-4 rounded-3">
  <h1 class="text-center">Đăng nhập</h1>
  <% if (error.length) { %>
  <div class="alert alert-danger text-center"><%= error %></div>
  <% } %>

  <form method="post">
    <div class="mb-3">
      <label for="">Email</label>
      <input
        type="email"
        name="email"
        class="form-control"
        placeholder="Email..."
      />
    </div>

    <div class="mb-3">
      <label for="">Mật khẩu</label>
      <input
        type="password"
        name="password"
        class="form-control"
        placeholder="Mật khẩu..."
      />
    </div>
    <div class="mb-3">
      <a href="/auth/forgot-password">Quên mật khẩu</a>
    </div>

    <div class="d-grid">
      <button class="btn btn-primary">Đăng nhập</button>
      <a href="/auth/google" class="btn btn-danger mt-2"
        >Đăng nhập với google</a
      >
    </div>
  </form>
</div>

