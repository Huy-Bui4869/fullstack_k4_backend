<div class="w-50 mx-auto p-4 shadow mt-5 d-flex flex-column align-item-center">
  <h2 class="text-center">Form gửi email</h2>

  <% if (msg.length) { %>
  <div class="alert alert-success mt-2"><%= msg %></div>
  <% } %>

  <form action="" method="post">
    <div class="mb-3">
      <label for="" class="form-label">Email gửi đến</label>
      <input
        type="email"
        class="form-control"
        name="email"
        placeholder="Gửi đến ..."
      />
    </div>

    <div class="mb-3">
      <label for="" class="form-label">Tiêu đề</label>
      <input
        type="text"
        class="form-control"
        name="title"
        placeholder="Tiêu đề..."
      />
    </div>

    <div class="mb-3">
      <label for="" class="form-label">Nội dung</label>
      <textarea
        name="description"
        placeholder="Nội dung"
        class="form-control"
        style="width: 100%; height: 100px"
      ></textarea>
    </div>
    <button class="btn btn-primary w-100">Gửi</button>
  </form>
  <hr />
  <a href="/" class="btn btn-primary">Trang chủ</a>
</div>
